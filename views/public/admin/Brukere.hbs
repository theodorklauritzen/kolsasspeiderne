<link rel="stylesheet" type="text/css" href="../css/admin/brukere.css">

<h1 class="title">Brukere</h1>

<form action="Brukere" method="get">
  <div class="input-group mb-2">
    <div class="input-group-prepend">
      <div class="input-group-text left-form-width">Navn</div>
    </div>
    <input type="text" class="form-control" placeholder="Søk" name="q">
  </div>
  <div class="form-inline">
    <button type="submit" class="btn submit-btn left-form-width">Søk</button>
    <div class="form-inline">
      <div class="form-margin form-group mb-2 custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="roleAdmin" name="roleAdmin">
        <label class="custom-control-label" for="roleAdmin">Admin</label>
      </div>
      <div class="form-margin form-group mb-2 custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="roleBlogger" name="roleBlogger">
        <label class="custom-control-label" for="roleBlogger">Blogger</label>
      </div>
    </div>
  </div>
</form>

<table class="table table-hover">
  <thead>
    <th scope="col">Navn</th>
    <th scope="col">Rettigheter</th>
  </thead>
  <tbody>
    {{#each user}}
      <tr>
        <td>{{name}}</td>
        <td>
          {{#if roles}}
            {{#each roles}}
              {{this}}
            {{/each}}
          {{else}}
            <a style="color: gray;">Ingen rettigheter</a>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
